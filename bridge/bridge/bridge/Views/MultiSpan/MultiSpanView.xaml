<Window x:Class="bridge.Views.MultiSpan.MultiSpanView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:bridge.Views"
        mc:Ignorable="d"
        Title="多跨桥梁设计"
        Width="{Binding WindowWidth}"
        Height="{Binding WindowHeight}"
        WindowState="{Binding WindowState}"
        StateChanged="Window_StateChanged"
        MinHeight="500" MinWidth="700"
        WindowStartupLocation="CenterScreen">
    
    <Window.Resources>
        <!-- 按钮样式 -->
        <Style x:Key="StandardButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="150"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="Background" Value="#2a7d8c"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="0">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#3a8d9c"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#1a6d7c"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- 圆形按钮样式 -->
        <Style x:Key="CircleButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="50"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="Background" Value="#3F8C99"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="25">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#216570"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#164950"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- 输入框样式 -->
        <Style x:Key="InputTextBoxStyle" TargetType="TextBox">
            <Setter Property="Height" Value="40"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="5,2"/>
            <Setter Property="BorderBrush" Value="#AAAAAA"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <Grid>
                                <TextBlock x:Name="WatermarkText"
                                           Text="{TemplateBinding Tag}"
                                           Visibility="Collapsed"
                                           Foreground="Gray"
                                           Margin="5,0,0,0"
                                           VerticalAlignment="Center"/>
                                <ScrollViewer x:Name="PART_ContentHost" 
                                          Margin="5,0,0,0"
                                          VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="Text" Value="">
                                <Setter Property="Visibility" Value="Visible" TargetName="WatermarkText"/>
                            </Trigger>
                            <Trigger Property="IsKeyboardFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#3F8C99"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="120"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        
        <!-- 顶部标题栏 -->
        <Border Grid.Row="0" Background="#3F8C99">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- 左侧LOGO图片 -->
                <Image Grid.Column="0" 
                       Source="/bridge;component/Resources/bridge_logo.png" 
                       Width="160" 
                       Height="70" 
                       Margin="20,0,0,0" 
                       VerticalAlignment="Center" 
                       HorizontalAlignment="Left"/>
                
                <!-- 标题文字 -->
                <TextBlock Grid.Column="1" 
                           Text="中国木拱桥智能设计系统" 
                           FontSize="48" 
                           FontWeight="Bold" 
                           Foreground="White" 
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center">
                    <TextBlock.Effect>
                        <DropShadowEffect ShadowDepth="3" Color="White" Opacity="0.7" BlurRadius="5"/>
                    </TextBlock.Effect>
                </TextBlock>
            </Grid>
        </Border>
        
        <!-- 主体内容区域 -->
        <Grid Grid.Row="1" Background="#E4F2F5">
            <!-- 参数输入区域 -->
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="400">
                <!-- 总跨径L -->
                <Grid Margin="0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0" 
                               Text="总跨径L" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               VerticalAlignment="Center"/>
                    
                    <TextBox Grid.Column="1" 
                             x:Name="SpanLength"
                             Tag="请输入总跨径(m)"
                             Style="{StaticResource InputTextBoxStyle}"/>
                </Grid>
                
                <!-- 桥宽W -->
                <Grid Margin="0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0" 
                               Text="桥宽W" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               VerticalAlignment="Center"/>
                    
                    <TextBox Grid.Column="1" 
                             x:Name="BridgeWidth"
                             Tag="请输入桥宽(m)"
                             Style="{StaticResource InputTextBoxStyle}"/>
                </Grid>
                
                <!-- 跨数n -->
                <Grid Margin="0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0" 
                               Text="跨数n" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               VerticalAlignment="Center"/>
                    
                    <TextBox Grid.Column="1" 
                             x:Name="SpanCount"
                             Tag="请输入跨数"
                             Style="{StaticResource InputTextBoxStyle}"/>
                </Grid>
                
                <!-- 操作按钮区域 -->
                <Grid Margin="0,30,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <Button Grid.Column="0"
                            x:Name="Help"
                            Content="帮助" 
                            Style="{StaticResource StandardButtonStyle}"
                            HorizontalAlignment="Center"/>
                    
                    <Button Grid.Column="1"
                            x:Name="Confirm"
                            Content="确认" 
                            Style="{StaticResource StandardButtonStyle}"
                            IsEnabled="{Binding CanConfirm}"
                            HorizontalAlignment="Center"/>
                </Grid>
            </StackPanel>
            
            <!-- 右下角按钮区域 -->
            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Right" 
                        VerticalAlignment="Bottom"
                        Margin="0,0,20,20">
                <Button x:Name="Back"
                        Content="返回" 
                        Width="100"
                        Height="45"
                        Style="{StaticResource StandardButtonStyle}"/>
            </StackPanel>
        </Grid>
        
        <!-- 底部状态栏 -->
        <Border Grid.Row="2" Background="#3F8C99">
            <TextBlock Text="版权所有 © 2023-2024 中国木拱桥智能设计系统" 
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center"
                       Foreground="White"
                       FontSize="12"/>
        </Border>
    </Grid>
</Window> 